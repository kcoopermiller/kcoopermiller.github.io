---
import Card from "./Card/index.astro";
import GameOfLife from "./GameOfLife.jsx";
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4">
  <div class="flex w-full h-full relative">
    <div class="absolute top-0 right-0 w-2/5 h-full z-0" style="opacity: 0.6;">
      <GameOfLife client:only />
    </div>
    <div class="flex flex-col justify-between z-10 w-full">
      <div class="flex flex-col h-full">
        <h6 class="text-sm font-light m-0 text-gray-500">Welcome</h6>
        <p class="m-0 font-light text-xl">
          Hi, I'm <b class="font-bold">Cooper Miller</b>, a CS undergraduate at
          UIUC
        </p>
      </div>
    </div>
  </div>
</Card>
